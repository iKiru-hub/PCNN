	note = {Publisher: eLife Sciences Publications, Ltd},
	keywords = {hippocampus, computational model, dendrites, learning, place cell, plasticity},
	pages = {e73046},
	file = {Full Text PDF:/Users/daniekru/Zotero/storage/QY2FBY62/Milstein et al. - 2021 - Bidirectional synaptic plasticity rapidly modifies.pdf:application/pdf},
}

