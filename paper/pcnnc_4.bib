@article{leeDoubleDissociationHippocampal2004,
	title = {A {Double} {Dissociation} between {Hippocampal} {Subfields}: {Differential} {Time} {Course} of {CA3} and {CA1} {Place} {Cells} for {Processing} {Changed} {Environments}},
	volume = {42},
